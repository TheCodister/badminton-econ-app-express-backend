model User {
  user_id      String   @id @default(uuid())
  username     String   @db.VarChar(50)
  mail         String   @unique @db.VarChar(50)
  phone_number String   @db.VarChar(12)
  password     String
  role         Role
  address      String?  @db.Text // Nullable, only for customers
  branch_id    String?  // Nullable, only for admins
  branch       Branch?  @relation("AdminBranch", fields: [branch_id], references: [branch_id])

  orders       Order[]
  shoppingCart ShoppingCart?

  @@map("users")
}

enum Role {
  CUSTOMER
  ADMIN
}

model ShoppingCart {
  cart_id     String     @id @default(uuid())
  customer_id String     @unique(map: "unique_customer_id")
  customer    User   @relation(fields: [customer_id], references: [user_id], onDelete: Cascade)
  cart_items  CartItem[]

  @@map("shopping_carts")
  @@unique([customer_id])
}

model CartItem {
  item_id    String      @id @default(uuid())
  cart_id    String
  cart       ShoppingCart @relation(fields: [cart_id], references: [cart_id], onDelete: Cascade)
  product_id String
  product    Product     @relation(fields: [product_id], references: [id], onDelete: Cascade)
  quantity   Int         @default(1)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("cart_items")
}

model Order {
  order_id     String      @id @default(uuid())
  order_date   DateTime
  customer_id  String
  customer     User    @relation(fields: [customer_id], references: [user_id])
  total_price  Decimal     @db.Decimal(10, 2) // Use Decimal here
  order_items  OrderItem[]

  @@index([customer_id]) // Add index on customer_id
  @@map("orders")
}

model OrderItem {
  item_id    String    @id @default(uuid())
  order_id   String
  order      Order     @relation(fields: [order_id], references: [order_id])
  product_id String
  quantity   Int
  product    Product   @relation(fields: [product_id], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("order_items")
}

enum ProductStatus {
  AVAILABLE
  UNAVAILABLE
  OUT_OF_STOCK
}
model Product {
  id                 String        @id @default(uuid())  // Primary Key
  image_url          String        @map("image_url")
  product_name       String
  brand              Brand
  price              Decimal       @map("price") @db.Decimal(10, 2)
  description        String
  status             ProductStatus // Use enum here
  sales              Boolean       @default(false)
  number_of_sales    Int          @default(0)
  stock              Int
  available_location Json

  racket             Racket[]       @relation // One-to-one relation
  shoes              Shoes[]      @relation // One-to-one relation
  shuttlecocks       Shuttlecock[]  @relation // One-to-one relation

  cartItems   CartItem[]  // One-to-many relation
  orderItems  OrderItem[] // One-to-many relation

  @@map("products")
}

model Racket {
  id           String   @id @default(uuid()) @map("product_id")
  product      Product  @relation(fields: [id], references: [id])
  line         String
  stiffness    Stiffness @default(Medium) // ✅ New field with default
  weight       String   @default("4U") // ✅ New field with default
  balance      Balance  @default(EvenBalance) // ✅ New field with default
  max_tension  String   @default("30 lbs") // ✅ New field with default
  length       Float    @default(675) // ✅ New field with default
  technology   Json
  playing_style String  @default("all-rounder") // ✅ New field with default
  player_level String   @default("average") // ✅ New field with default

  @@map("rackets")
}

enum Balance {
  HeadHeavy
  EvenBalance
  HeadLight
}

enum Stiffness {
  Medium
  Stiff
  ExtraStiff
  Flexible
  ExtraFlexible
}

model Shoes {
  id             String  @id @default(uuid()) @map("product_id")
  product        Product @relation(fields: [id], references: [id])
  color          Json
  size           Json
  available_size Json
  technology     Json

  @@map("shoes")
}

model Shuttlecock {
  id            String  @id @default(uuid()) @map("product_id")
  product       Product @relation(fields: [id], references: [id])
  shuttle_type  String
  speed         Int
  no_per_tube   Int

  @@map("shuttlecocks")
}

