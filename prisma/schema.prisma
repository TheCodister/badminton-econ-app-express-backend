  LINING
  YONEX
  VICTOR
  MIZUNO
  VS
  KUMPOO
  APACS
  PROACE
  FLEET
  FLYPOWER
  REDSON
  TARO
  FELET
  VNB
  PROKENNEX
  KAWASAKI
  GOSEN
  IXE
  KAMITO
  VICLEO
}

// Models
model Branch {
  branch_id      String  @id @db.VarChar(100)
  branch_name    String  @db.VarChar(100)
  branch_address String  @db.Text
  branch_phone   String  @db.VarChar(15)
  admins         User[]  @relation("AdminBranch")
  @@map("branches")
}


